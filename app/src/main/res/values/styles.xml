<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="subtitle">
        <item name="android:color">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

    <style name="body">
        <item name="android:textSize">@dimen/body_size</item>
    </style>

    <style name="dialogFragmentStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
</resources>